
<%- include('./partials/admin-nav') %>


  <!-- Admin Panel Content -->
  <div class="container-fluid p-4">
    <%- include('./partials/messages') %>

    <a href="/admin/add-contestant" class="btn btn-success mb-4">add contestant</a>

    <p class="text-uppercase text-success"> All contestants table</p>
<!-- system votes -->
      <div class="table-responsive">
        <table class="table table-striped" width="100%" cellspacing="0">
            <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>votes</th>
                  <th>action</th>
                </tr>
            </thead>
            <tbody>
                <% contestants.forEach(function(data, index) { %>
                    <tr data-aos="fade-up" data-aos-delay="100">
                        <td><%= index + 1 %></td>
                        <td><%= data['fname'] %> <%= data['lname'] %></td>

                        <td><%= data['vote_count']%></td>
                      <td>
                       
                        <a href="/admin/view-contestant/<%= data['id']%>" class="btn btn-outline-primary">view</a>
                        <form action="/admin/delete-contestant/<%= data['id']%>" method="post">
                          <input type="hidden" name="_method" value="DELETE">
                          <button class="btn btn-outline-danger "> Evict </button>
                        </form>
                      </td>
                    </tr> 
                <% }) %>
            </tbody>
          </table>
      </div>

  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Display current date
    document.getElementById('currentDate').innerText = new Date().toLocaleDateString();
  </script>
